--Tabela Categorias--
CREATE TABLE CATEGORIAS(
	CATEGORIA_ID SERIAL PRIMARY KEY,
	CATEGORIA_NOME VARCHAR(255)
);

--Tabela Produtos--
CREATE TABLE PRODUTOS(
	PRODUTO_ID SERIAL PRIMARY KEY,
	CATEGORIA_ID_FK INTEGER NOT NULL,
	PRODUTO_NOME VARCHAR(255) NOT NULL,
	PRODUTO_DESCRICAO VARCHAR(255) NOT NULL,
	PRODUTO_COR VARCHAR(255) NOT NULL,
	PRODUTO_VALOR DECIMAL(10,2) NOT NULL,
	PRODUTO_QUANTIDADE INTEGER NOT NULL,
	FOREIGN KEY (CATEGORIA_ID_FK) REFERENCES CATEGORIAS(CATEGORIA_ID)
);

